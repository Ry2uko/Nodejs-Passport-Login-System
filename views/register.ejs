<link rel="stylesheet" href="/css/bootstrap.min.css" />

<h1 class=" display-4 text-center mt-4 mb-3">Register</h1>

<div class="container-fluid w-25 my-4 border border-muted rounded px-4 py-2">
  <form action="/register" method="POST">
    <div class="form-group my-3">
      <label for="email" class="my-2">Email</label>
      <input type="email" id="email" name="email"class="form-control"
      placeholder="Enter Email" autocomplete="off" required/>
    </div>
    <div class="form-group my-3">
      <label form="password" class="my-2">Password</label>
      <input type="password" id="password" name="password" class="form-control"
      placeholder="Password" autocomplete="off" required/>
    </div>
    <button type="submit" class="btn btn-primary px-3 my-2">Register</button>
  </form>
</div>
<p class="mt-2 lead text-center">Already have an account? <a href="/login">Sign in</a></p>
